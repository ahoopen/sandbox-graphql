{
    "name": "sandbox",
    "version": "0.0.1",
    "keywords": [],
    "description": "Workshop",
    "license": "MIT",
    "dependencies": {
        "@apollo/react-hooks": "3.1.5",
        "@apollo/react-ssr": "3.1.5",
        "apollo-cache-inmemory": "1.6.5",
        "apollo-client": "2.6.8",
        "apollo-link-batch-http": "1.2.14",
        "apollo-link-context": "1.0.20",
        "apollo-link-error": "1.1.13",
        "apollo-link-http": "1.5.17",
        "apollo-server-micro": "2.12.0",
        "graphql": "14.5.0",
        "isomorphic-unfetch": "3.0.0",
        "next": "9.3.5",
        "react": "16.13.1",
        "react-apollo": "3.1.5",
        "react-dom": "16.13.1",
        "styled-components": "5.1.0"
    },
    "devDependencies": {
        "@apollo/react-testing": "3.1.4",
        "@graphql-codegen/add": "1.13.2",
        "@graphql-codegen/cli": "1.13.2",
        "@graphql-codegen/introspection": "1.13.2",
        "@graphql-codegen/schema-ast": "1.13.2",
        "@graphql-codegen/typescript": "1.13.2",
        "@graphql-codegen/typescript-operations": "1.13.2",
        "@graphql-codegen/typescript-react-apollo": "1.13.2",
        "@graphql-codegen/typescript-resolvers": "1.14.0",
        "@graphql-inspector/actions": "1.27.0",
        "@graphql-inspector/cli": "1.30.4",
        "@testing-library/jest-dom": "^5.9.0",
        "@testing-library/react": "10.2.0",
        "@testing-library/react-hooks": "3.3.0",
        "@types/jest": "25.2.3",
        "@types/node": "13.11.1",
        "@types/react": "16.9.34",
        "@types/react-dom": "16.9.6",
        "@types/styled-components": "5.1.0",
        "babel-jest": "^26.0.1",
        "concurrently": "^5.2.0",
        "jest": "26.0.1",
        "prettier": "2.0.4",
        "react-intersection-observer": "8.26.2",
        "ts-jest": "26.1.0",
        "typescript": "3.8.3"
    },
    "scripts": {
        "dev": "concurrently  'yarn codegen -w' 'yarn next' 'yarn test:server --watch' 'yarn test:client --watch' -n 'codegen,nextjs,test:server,test:client' -c 'gray,magenta,gray,gray'",
        "build": "next build",
        "start": "NODE_ENV=production next start",
        "next": "NODE_OPTIONS='--inspect' next dev",
        "test": "test:server && test:client",
        "test:server": "jest ./pages/api/graphql/** --config=jest-server.config.js",
        "test:client": "jest {./modules/**,./components/**} --config=jest-client.config.js",
        "---- auto tooling ----": "-------------------------",
        "codegen": "graphql-codegen --config codegen.yml",
        "prettier": "prettier \"{pages,lib,modules,components}/**/*.{ts,tsx}\" --write",
        "schema:diff": "graphql-inspector diff git:origin/master:codegen/generated/_schema.graphql codegen/generated/_schema.graphql"
    },
    "graphql-inspector": {
        "diff": true,
        "schema": {
            "ref": "master",
            "path": "codegen/generated/_schema.graphql"
        }
    }
}
